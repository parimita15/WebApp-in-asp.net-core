@model IEnumerable<Category>
    

@*
@{
    ViewData ["Title"] = "Category";
}*@




    <h2>@TempData["sucess"]</h2>




<h1>
    categories Details 

</h1>

<div class="container" p-4>
    <div class="row p-3">
        <div class="col p-4">
            <h2 class="text-primary">Category</h2>
        </div>

        <div class="col-6 text-end">   
            @*here textend for shift text to right*@



            <a class="btn btn-primary" asp-action="Create" asp-controller="Category"><i class="bi bi-plus-square-fill"></i>&nbsp; Category </a>
                
        </div>
    </div>

</div>

<table class="table table-bordered table-striped"style="width:100%">
    <thead>
        <tr>
            <th>
                Catagory Name
            </th>

            <th>
                Dispaly Order
            </th>
            <th>
                Action
            </th>

        </tr>
    </thead>
    <tbody>

        @foreach (var Item in Model ) 
        {
            
        
        <tr>
           <td>
               @Item.Name
           </td>
           <td>
               @Item.DisplayOrder
           </td>
           <td role="group">

                    <a asp-action="Edit" asp-controller="Category" asp-route-id="@Item.Id"><i class="bi bi-pencil-square"></i></a>
                    <a asp-action="Delete" asp-controller="Category" asp-route-id="@Item.Id"><i class="bi bi-trash3-fill"></i></a>
           </td>
       </tr>

        }
    </tbody>
</table>